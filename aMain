-- –ó–∞–≥—Ä—É–∂–∞–µ–º Rayfield UI –Ω–∞–ø—Ä—è–º—É—é —Å GitHub
loadstring(game:HttpGet("https://raw.githubusercontent.com/rileybeerblx2/rayfield-ui/main/source.lua"))()

-- –°–æ–∑–¥–∞–µ–º –æ–∫–Ω–æ
local Window = Rayfield:CreateWindow({
    Name = "üåô aMain Hub",
    LoadingTitle = "–ó–∞–≥—Ä—É–∑–∫–∞ aMain Hub...",
    LoadingSubtitle = "By Delta x Rayfield",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "aMainHub", -- –∏–º—è –ø–∞–ø–∫–∏ –¥–ª—è –∫–æ–Ω—Ñ–∏–≥–æ–≤
        FileName = "aMainConfig"
    },
    Discord = {
        Enabled = false, -- –µ—Å–ª–∏ –Ω–µ –Ω—É–∂–µ–Ω –¥–∏—Å–∫–æ—Ä–¥
    },
    KeySystem = false, -- ‚ùå –æ—Ç–∫–ª—é—á–∞–µ–º key system
})

-- –°–æ–∑–¥–∞–µ–º –≤–∫–ª–∞–¥–∫—É
local MainTab = Window:CreateTab("Main", 4483362458) -- –∏–∫–æ–Ω–∫–∞ –º–æ–∂–Ω–æ —Å–º–µ–Ω–∏—Ç—å –Ω–∞ —Å–≤–æ—é

-- –î–æ–±–∞–≤–ª—è–µ–º –∫–Ω–æ–ø–∫–∏
MainTab:CreateButton({
    Name = "üí® WalkSpeed +50",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 50
    end,
})

MainTab:CreateButton({
    Name = "üî• JumpPower +100",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = 100
    end,
})

MainTab:CreateButton({
    Name = "‚ôªÔ∏è Reset Stats",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 16
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = 50
    end,
})

-- –î–æ–±–∞–≤–ª—è–µ–º Toggle
MainTab:CreateToggle({
    Name = "üëª NoClip",
    CurrentValue = false,
    Callback = function(Value)
        noclip = Value
        game:GetService("RunService").Stepped:Connect(function()
            if noclip then
                for _, v in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
                    if v:IsA("BasePart") then
                        v.CanCollide = false
                    end
                end
            end
        end)
    end,
})
